.nav-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin:5% auto;
  position: relative;
}

.nav-first {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.nav-last {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 5%;
}

.nav-container .nav-item{
  align-items: center;
  display: flex;
  flex-direction: column;
}
.nav-container .nav-item image {
  width: 80rpx;
  height: 80rpx;
}

.nav-container .nav-item text {
  font-size: 26rpx;
  color:#333;
  margin-top: 10%;
}

.nav-container .random {
    position: absolute;
    right: 46rpx;
    width: 30rpx;
    height: 30rpx;
    top: 0;
    font-size: 24rpx;
    background: #ff1a07;
    text-align: center;
    border-radius: 50%;
    line-height: 30rpx;
    color: #fff;
}
